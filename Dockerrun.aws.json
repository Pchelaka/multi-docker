{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [        
        {
            "memoryReservation": 128,
            "name": "server",
            "image": "destination/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "memoryReservation": 128,
            "name": "client",
            "image": "destination/multi-client",
            "hostname": "client",
            "portMappings": [
                {
                "hostPort": 80,
                "containerPort": 80
                }
            ],
            "essential": false
        },
        {
            "memoryReservation": 128,
            "name": "worker",
            "image": "destination/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "memoryReservation": 128,
            "name": "nginx",
            "image": "destination/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            
            "links": ["client", "server"]
        }
    ]
}